<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fievetthibault.rssfeedreader" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fievetthibault.rssfeedreader.Feeds"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fievetthibault.rssfeedreader.AddFeed"
            android:label="@string/title_activity_add_feed">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fievetthibault.rssfeedreader.Feeds" />
        </activity>
        <activity
            android:name="fievetthibault.rssfeedreader.ManageFeeds"
            android:label="@string/title_activity_manage_feeds">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fievetthibault.rssfeedreader.Feeds" />
        </activity>
        <activity
            android:name="fievetthibault.rssfeedreader.DisplaySettings"
            android:label="@string/title_activity_display_settings">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fievetthibault.rssfeedreader.Feeds" />
        </activity>
        <activity
            android:name="fievetthibault.rssfeedreader.ItemDetailActivity"
            android:label="@string/title_activity_item_detail">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fievetthibault.rssfeedreader.Feeds" />
        </activity>
        <activity
            android:name="fievetthibault.rssfeedreader.EditFeed"
            android:label="@string/title_activity_edit_feed">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fievetthibault.rssfeedreader.ManageFeeds" />
        </activity>
    </application>

</manifest>
